
<div class="comment-card">
  
  <div class="card">
    <div class="card-block">
     
      <div class="row">
        <div class="col-md-2">
         <##%= gravatar_helper @comment.user %>
        </div>

        <div class="col-md-10">
          <div>
            <% comments.each do |comment| %>
            <%= render(partial: 'comments/comment', object: comment) %>
          <% end %>
          </div>

          <div class="comment-attribution">
            Comment posted by <span class="comment-name"><%= comment.user.first_name %></span> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
          </div>
          <% if logged_in?(:site_admin) %>
          <span class="pull-right">
           
            <%= link_to fa_icon('trash'), blog_comment_path(@blog, comment), method: :delete, data:{ confirm: "Are you sure you want to delete this post"}  %>
          </span>
          <% end %>
        </div>
      </div>
    </div>
    
  </div>
</div>

